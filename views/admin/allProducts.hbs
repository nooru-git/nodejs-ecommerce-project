<section>
  <div class="container">
  

    <a href="/admin/add-product" class=" btn btn-success mt-4  float-end">Add Products</a>


    <table class="table mt-4 ml-auto">
      <thead>
        <tr>
          <th scope="col">Product id</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Category</th>
          <th scope="col">Descrption</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each product}}
        <tr>
          <td>{{this._id}}</td>
          <td>{{this.productName}}</td> 
          <td>{{this.productPrice}}</td>
          <td>{{this.productCategory}}</td>
          <td>{{this.productDescription}}</td>
          <td><img style="width:50px" " hieght:30px" src="/product-image/{{this._id}}.jpg" alt="image not loaded"></td>
          <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
          <td><a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('are sure want to delete{{this.product-name}}? ')">Delete</a></td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>